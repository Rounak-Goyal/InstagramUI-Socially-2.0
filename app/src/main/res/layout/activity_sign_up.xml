<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ui"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:src="@drawable/instagram"
        app:tint="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        />
    <EditText
        android:id="@+id/email_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs_background"
        android:layout_below="@+id/logo"
        android:padding="10dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:inputType="textEmailAddress"
        android:hint="Email.."
        android:textColorHint="@color/black"
        android:textColor="#434242"
        />
    <EditText
        android:id="@+id/full_name_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs_background"
        android:layout_below="@+id/email_signup"
        android:layout_marginBottom="4dp"
        android:padding="10dp"
        android:layout_marginHorizontal="3dp"
        android:inputType="text"
        android:hint="full name"
        android:textColorHint="@color/black"
        android:textColor="#434242"
        />
    <EditText
        android:id="@+id/username_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs_background"
        android:layout_below="@+id/full_name_signup"
        android:layout_marginBottom="4dp"
        android:padding="10dp"
        android:layout_marginHorizontal="3dp"
        android:inputType="text"
        android:hint="Username"
        android:textColorHint="@color/black"
        android:textColor="#434242"
        />
    <EditText
        android:id="@+id/password_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs_background"
        android:layout_below="@+id/username_signup"
        android:layout_marginBottom="4dp"
        android:padding="10dp"
        android:layout_marginHorizontal="3dp"
        android:inputType="textPassword"
        android:hint="Password.."
        android:textColorHint="@color/black"
        android:textColor="#434242"
        />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_signup"
        android:layout_marginHorizontal="3dp"
        android:layout_marginTop="-3dp"
        android:backgroundTint="#D1CFCF"
        android:padding="10dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/signin_link_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#EC5C2F"
        android:padding="5dp"
        android:text="Already have Account? SignIn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>